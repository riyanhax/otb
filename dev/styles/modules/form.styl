/* Форма */
$placeholder-color = #909090


.form
  &-input   /* input */
    width 100%
    height 59px
    border 1px solid #96b1bc
    color #96b1bc
    display block
    outline none
    &.error
      color red !important
      border 1px solid red !important
    &.valid
      border 1px solid #339E36 !important
    &:focus
      color #000
    &::-webkit-input-placeholder
      color $placeholder-color
    &::-moz-placeholder
      color $placeholder-color /* Firefox 19+ */
    &:-moz-placeholder
      color $placeholder-color /* Firefox 18- */
    &:-ms-input-placeholder
      color $placeholder-color
  &-label
    position relative
  &-submit   /* Кнопка submit */
    cursor pointer
    outline none
    -webkit-appearance none
label.error
  position absolute
  top -8px
  left 20px
  font 400 14px/24px 'arial', sans-serif
  padding 5px 5px
  background rgba(255, 216, 111, .88)
  box-shadow 0 1px 2px #8B7308
  color #000
  border-radius 5px
  transform translateY(-100%)
  &:after
    content ''
    position absolute
    bottom -10px
    left 20px
    width 0
    height 0
    border-left 7px solid transparent
    border-right 7px solid transparent
    border-top 10px solid rgba(255, 216, 111, .88)

