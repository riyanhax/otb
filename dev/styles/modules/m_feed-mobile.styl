.m_feed-mobile
  position relative
  height 829px
  background url("../images/bg-5.jpg") no-repeat 50% 50%
  background-size cover
  padding-top 390px
  @media screen and (max-width: 1500px)
    padding-top 310px
  @media screen and (max-width: 580px)
    padding-top 50px
    padding-bottom 50px
    height auto
  .feedback
    position absolute
    left 0
    top 0
    height 265px
    width 100%
    color #fff
    background rgba(9, 15, 24, .85)
    @media screen and (max-width: 1320px)
      height 215px
    @media screen and (max-width: 580px)
      display none
    .helper-parent
      position relative
      z-index 10
      display table
      height 100%
      @media screen and (max-width: 1320px)
        width 100%
    .helper-child
      display table-cell
      vertical-align middle
    .wrapper
      height 100%
      > div,
      > .right > div
        position relative
        float left
        height 100%
        cursor default
      .right
        float right
        medium()
        font-size 28px
        text-align center
        @media screen and (max-width: 1540px)
          font-size 22px
        @media screen and (max-width: 1320px)
          float none
          width 100%
        @media screen and (max-width: 850px)
          font-size 18px
        > div
          @media screen and (max-width: 1320px)
            width 25%
            text-align center
          &:before
            content ""
            position absolute
            width 100%
            height 110%
            left 0
            top -5%
            background: rgba(228,195,97,1);
            background: -moz-linear-gradient(top, rgba(228,195,97,1) 0%, rgba(141,121,60,1) 100%);
            background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(228,195,97,1)), color-stop(100%, rgba(141,121,60,1)));
            background: -webkit-linear-gradient(top, rgba(228,195,97,1) 0%, rgba(141,121,60,1) 100%);
            background: -o-linear-gradient(top, rgba(228,195,97,1) 0%, rgba(141,121,60,1) 100%);
            background: -ms-linear-gradient(top, rgba(228,195,97,1) 0%, rgba(141,121,60,1) 100%);
            background: linear-gradient(to bottom, rgba(228,195,97,1) 0%, rgba(141,121,60,1) 100%);
            display none
          &:hover
            color #000
            &:before
              display block
            &.tel .icon
              background-position -760px -300px !important
            &.online .icon
              background-position -1029px -300px !important
            &.email .icon
              background-position -1320px -301px !important
            &.socials .icon
              background-position -1533px -302px !important
    .title
      black()
      font-size 28px
      padding-left 130px
      @media screen and (max-width: 1540px)
        font-size 22px
      @media screen and (max-width: 1320px)
        display none
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -509px -300px;
        width: 99px;
        height: 129px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
    .tel
      padding-left 30px
      padding-right 30px
      position relative
      @media screen and (max-width: 850px)
        padding-left 10px
        padding-right 10px
      .icon
        margin-bottom 20px
        background: url('../images/sprite.png') no-repeat -649px -300px;
        width: 85px;
        height: 85px;
        margin-left auto
        margin-right auto
    .online
      padding-left 30px
      padding-right 30px
      @media screen and (max-width: 850px)
        padding-left 10px
        padding-right 10px
      .icon
        margin-bottom 20px
        background: url('../images/sprite.png') no-repeat -886px -300px;
        width: 128px;
        height: 76px;
        margin-left auto
        margin-right auto
    .email
      padding-left 30px
      padding-right 30px
      @media screen and (max-width: 850px)
        padding-left 10px
        padding-right 10px
      .icon
        margin-bottom 20px
        background: url('../images/sprite.png') no-repeat -1198px -301px;
        width: 81px;
        height: 94px;
        margin-left auto
        margin-right auto
    .socials
      padding-left 30px
      padding-right 30px
      @media screen and (max-width: 850px)
        padding-left 10px
        padding-right 10px
      .icon
        margin-bottom 20px
        background: url('../images/sprite.png') no-repeat -1427px -300px;
        width: 80px;
        height: 85px;
        margin-left auto
        margin-right auto
      .buttons
        margin-top 10px
        a
          display inline-block
          vertical-align middle
          margin-left 5px
          margin-right 5px
        .vk
          background: url('../images/sprite.png') no-repeat -156px -663px;
          width: 36px;
          height: 22px;
        .fb
          background: url('../images/sprite.png') no-repeat -216px -663px;
          width: 12px;
          height: 25px;
        .yt
          background: url('../images/sprite.png') no-repeat -249px -663px;
          width: 24px;
          height: 24px;
  .apps
    text-align center
    padding-left 50px
    padding-right 50px
    width 40%
    margin-left 55%
    @media screen and (max-width: 1500px)
      width 550px
      float right
      padding-left 0
      padding-right 0
      margin-right 10%
    @media screen and (max-width: 1220px)
      margin-right auto
      margin-left auto
      float none
    @media screen and (max-width: 580px)
      width 100%
      margin-right 0
    .wrapper
      width 100%
    h3
      color #f9d36d
      font-size 43px
      @media screen and (max-width: 580px)
        font-size 33px
    p
      margin 0
      font-size 34px
      color #fff
      padding-left 70px
      padding-right 70px
      @media screen and (max-width: 1500px)
        padding-left 0
        padding-right 0
      @media screen and (max-width: 580px)
        font-size 24px
    .store
      padding-top 50px
      a
        display inline-block
        vertical-align middle
        width: 175px;
        height: 57px;
        margin-left 10px
        margin-right 10px
        @media screen and (max-width: 580px)
          margin-bottom 10px
      .google
        background: url('../images/sprite.png') no-repeat 0 -572px;
      .apple
        background: url('../images/sprite.png') no-repeat -190px -572px;

