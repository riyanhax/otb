.m_header
  position relative
  background #020202
  color #fff
  @media screen and (min-width: 568px)
    height 88px
    position fixed
    left 0
    top 0
    width 100%
    z-index 30
  @media screen and (min-width: 1200px)
    height 98px
  .logo
    display block
    padding 15px 0
    @media screen and (min-width: 568px)
      float left
      padding 0
      position relative
      z-index 10
    a
      display block
      background: url('../images/sprite.png') no-repeat 0 0;
      width: 251px;
      height: 47px;
      margin-left auto
      margin-right auto
      @media screen and (min-width: 568px)
        background: url('../images/mobile/logo.png') no-repeat 0 0;
        width: 182px;
        height: 34px;
        margin 27px 0
      @media screen and (min-width: 1200px)
        background: url('../images/sprite.png') no-repeat 0 0;
        width: 251px;
        height: 47px;
        margin 25.5px 0
  .middle, .signup
    display none
  .signup
    @media screen and (min-width: 568px)
      position relative
      display block
      z-index 10
      float right
      width 160px
      height 46px
      margin 21px 0
      a
        position relative
        display block
        width 100%
        height 100%
        color #fff
        line-height 42px
        text-align center
        background #0aa338
        border-radius 5px
        font-size 18px
        transition background .25s ease-in
        border 2px solid #0a9a35
        &:hover
          background #0a742a
    @media screen and (min-width: 1600px)
      width 288px
  .middle
    @media screen and (min-width: 568px)
      display block
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      padding-left 200px
      padding-right 190px
      .lang, .gov-1, .gov-2
        display none
    @media screen and (min-width: 960px)
      padding-left 0
      padding-right 0
      left 50%
      width 540px
      margin-left -250px
    @media screen and (min-width: 1200px)
      width 700px
      margin-left -300px
    @media screen and (min-width: 1400px)
      width 800px
      margin-left -350px
    @media screen and (min-width: 1600px)
      width 960px
      margin-left -470px
    .how-to
      @media screen and (min-width: 568px)
        display table
        height 100%
        margin-left auto
        margin-right auto
        a
          position relative
          padding-left 35px
          color #fff
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat 0 -60px;
            width: 26px;
            height: 26px;
            position absolute
            left 0
            top 50%
            margin-top -(@height/2)
          &:hover
            color $yellow
          span
            border-bottom 1px dashed $yellow
      @media screen and (min-width: 960px)
        float left
      @media screen and (min-width: 1600px)
        margin-right 15px
        a
          font-size 18px
    .gov-1, .gov-2
      @media screen and (min-width: 960px)
        display table
        height 100%
        position relative
        font-size 9px
        float left
        margin-left 20px
        padding-left 30px
        cursor default
      @media screen and (min-width: 1200px)
        font-size 13px
        padding-left 50px
      @media screen and (min-width: 1600px)
        margin-left 50px
    .gov-1
      &:after
        content ''
        width 21px
        height 23px
        background url("../images/mobile/gov-1.png") no-repeat 0 0
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
        @media screen and (min-width: 1200px)
          background: url('../images/sprite.png') no-repeat -270px 0;
          width: 41px;
          height: 45px;
          margin-top -22.5px
    .gov-2
      &:after
        content ''
        width 20px
        height 23px
        background url("../images/mobile/gov-2.png") no-repeat 0 0
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
        @media screen and (min-width: 1200px)
          background: url('../images/sprite.png') no-repeat -320px 0;
          width: 42px;
          height: 48px;
          margin-top -24px
    .lang
      @media screen and (min-width: 1400px)
        display table
        float left
        height 100%
        margin-left 25px
        a
          color #fff
          font-size 13px
          text-decoration underline
          position relative
          padding-left 25px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -370px 0;
            width: 21px;
            height: 14px;
            position absolute
            left 0
            top 50%
            margin-top -7px
          &:hover
            text-decoration none
      @media screen and (min-width: 1600px)
        margin-left 50px

