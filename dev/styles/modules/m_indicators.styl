.m_indicators
  padding 60px 0
  h2
    text-align center
    font-size 42px
    margin-bottom 40px
    @media screen and (max-width: 1220px)
      font-size 31px
    @media screen and (max-width: 580px)
      font-size 24px
  .buttons-list
    text-align center
    li
      display inline-block
      @media screen and (max-width: 1560px)
        margin-top 10px
        margin-bottom 10px
      @media screen and (max-width: 850px)
        width auto
        margin-left 30px
        margin-right 30px
      @media screen and (max-width: 480px)
        width 100%
        margin-left 0
        margin-right 0
      .title
        medium()
        font-size 40px
        color #88762e
        margin-right 10px
        display inline-block
        vertical-align middle
        @media screen and (max-width: 1600px)
          font-size 32px
        @media screen and (max-width: 850px)
          display block
          margin-left auto
          margin-right auto
      .see
        display inline-block
        vertical-align middle
        height 40px
        line-height 38px
        border 2px solid #40965a
        color #40965a
        padding-right 5px
        padding-left 40px
        position relative
        margin-right 40px
        @media screen and (max-width: 850px)
          margin-right 0
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -69px -671px;
          width: 29px;
          height: 29px;
          position absolute
          left 5px
          top 50%
          margin-top -(@height/2)
        &:hover
          &:after
            background-position -103px -671px