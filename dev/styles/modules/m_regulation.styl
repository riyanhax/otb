.m_regulation
  padding 50px 0
  overflow hidden
  .wrapper
    width 1400px
    @media screen and (max-width: 1500px)
      width 96%
  h2
    medium()
    font-size 40px
    text-align center
    margin-bottom 20px
    @media screen and (max-width: 850px)
      font-size 32px
  p
    font-size 24px
    light()
    color #0e1421
    @media screen and (max-width: 850px)
      font-size 18px
    a
      color #0e1421
      text-decoration underline
  p.herb-1,
  p.herb-2
    position relative
    padding-left 130px
    font-size 21px
    @media screen and (max-width: 850px)
      font-size 16px
    @media screen and (max-width: 480px)
      padding-left 0
  .herb-1
    &:after
      content ''
      position absolute
      left 0
      top 50%
      background: url('../images/sprite.png') no-repeat -370px -676px;
      width: 115px;
      height: 121px;
      margin-top -(@height/2)
      @media screen and (max-width: 480px)
        display none
  .herb-2
    margin-top 20px
    &:after
      content ""
      background: url('../images/sprite.png') no-repeat -530px -676px;
      width: 118px;
      height: 138px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
      @media screen and (max-width: 480px)
        display none
  .profit
    margin 55px 0
    padding-left 120px
    padding-right 120px
    padding-bottom 30px
    padding-top 30px
    border 5px solid $yellow
    text-align center
    @media screen and (max-width: 850px)
      padding-left 20px
      padding-right 20px
    h3
      medium()
      text-align center
      display inline-block
      vertical-align middle
      text-align center
      position relative
      top -44px
      padding-left 40px
      padding-right 40px
      font-size 20px
      text-transform uppercase
      background url("../images/body.png") 0 0
    .columns
      clearfix()
      .col
        width 33.333%
        float left
        text-align left
        font-size 18px
        @media screen and (max-width: 580px)
          width 100%
          margin-bottom 20px
          text-align center !important
          &:last-child
            margin-bottom 0

        h4
          medium()
        p
          font-size 18px
          margin 0
          padding-top 10px
      ul
        text-align left
        li
          padding 10px 0
          light()
          font-size 18px
          padding-left 15px
          position relative
          &:after
            content ''
            width 5px
            height 5px
            border-radius 50%
            background $yellow
            position absolute
            left 0
            top 17px
  .download
    padding-left 130px
    @media screen and (max-width: 480px)
      padding-left 0
    a
      font-size 18px
      color #0e1421
      position relative
      padding-left 25px
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -321px -655px;
        width: 17px;
        height: 21px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
      &:hover
        text-decoration underline
  .warning
    color #44454a
    text-align center
    opacity .7
    margin-bottom 40px
    h3
      font-size 26px
      medium()
    p
      font-size 18px
      text-align left
  .m_lead-form .currency
    border-color #9e9e9e
  .m_lead-form .currency .title:after,
  .m_lead-form .currency .radio-custom:after
    background #9e9e9e
  .m_lead-form .rules .check-label a
    color #262626
  .m_lead-form .currency:after
    background url("../images/bottom-form-icon-title.png") no-repeat 0 0
  .m_lead-form .form-label-inputs .input-icon-email.focused:after
    background-position 0 -120px
  .m_lead-form .form-label-inputs .input-icon-password.focused:after
    background-position -35px -120px
  .m_lead-form
    clearfix()
    .left
      float left
      width 780px
      @media screen and (max-width: 1500px)
        width 60%
      @media screen and (max-width: 1220px)
        width 100%
        float none
    .right
      width 550px
      float right
      @media screen and (max-width: 1500px)
        width 35%
      @media screen and (max-width: 1220px)
        width 100%
        float none
    .rules
      margin-bottom 11px
      @media screen and (max-width: 1220px)
        text-align center
    .form-label-inputs input:focus
      border-color #9e9e9e !important
    .form-label-submit
      input
        height 84px
        line-height 84px
        @media screen and (max-width: 1220px)
          width 550px
          margin-left auto
          margin-right auto
        @media screen and (max-width: 580px)
          width 100%


